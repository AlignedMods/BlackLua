struct Vector2 {
    float x;
    float y;
}

struct Player {
    Vector2 Position;
    Vector2 Velocity;

    void Update() {
        Position.x += Velocity.x;
        Position.y += Velocity.y;
    }

    void ChangeVelocity(Vector2 newVelocity) {
        Velocity = newVelocity;
    }

    float GetX() { return Position.x; }
    float GetY() { return Position.y; }
}

Player p;
Vector2 newVelocity;
newVelocity.x = 5.0;
newVelocity.y = 4.0;

p.ChangeVelocity(newVelocity);
p.Update();